<h1>Listing issues</h1>

<a title="+Issue" href="javascript:void((function(){var%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('src','http://localhost:3000/assets/bookmarklet.js');document.body.appendChild(e)})())">+Issue</a>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Github owner</th>
      <th>Github repository</th>
      <th>Github</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.github_owner %></td>
        <td><%= issue.github_repository %></td>
        <td><%= issue.github_id %></td>
        <td><%= issue.state %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
