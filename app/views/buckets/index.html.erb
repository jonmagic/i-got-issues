<div class="row">
  <% @buckets.each do |bucket| %>
    <div class="col-lg-<%= @columns %> col-md-<%= @columns %> col-xs-12 bucket">
      <h3 class="bucket-header"><%= bucket.name %></h3>

      <ul class="bucket-list js-bucket-list" data-bucket-id="<%= bucket.id %>">
        <% PrioritizedIssue.bucket(bucket).each do |issue| %>
          <li class="ui-state-default" data-prioritized-issue-path="<%= prioritized_issue_move_to_bucket_path(issue) %>"><%= issue.title %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="row-fluid">
  <%= link_to 'New Bucket', new_bucket_path %>
</div>
