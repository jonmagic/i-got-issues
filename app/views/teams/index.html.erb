<div class="container team-container">
  <div class="row">
    <% @organizations.each do |organization, teams| %>
      <div class="col-md-6 clearfix org">
        <h3 class="clearfix">
          <img src="<%= "#{teams.first.avatar_url}?size=48" %>" class="org-avatar"><%= organization %>
        </h3>
        <% teams.sort_by{ |team| team.name.downcase }.each do |team| %>
          <a href="<%= team_path(team) %>" class="team">
            <%= render :partial => "teams/team_preview", :locals => {:team => team} %>
          </a>
        <% end %>
      </div>
      <% end %>
  </div>
</div>
